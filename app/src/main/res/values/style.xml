<?xml version="1.0" encoding="utf-8"?>
<resources>





    <!-- Estilo para RecyclerView -->
    <style name="RecyclerViewStyle" >



    </style>

    <!-- Estilo para CardView -->
    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView" >

        <item name="cardBackgroundColor">@color/background_card</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>

    </style>



    <!-- Estilo para TextViews -->
    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="TextStyleName">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_name_color_detail_activity</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>






</resources>